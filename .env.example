# Heimdall Local Development Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration (for local testing)
DATABASE_URL=postgresql://heimdall_user:heimdall_pass@localhost:5432/heimdall_dev
TEST_DATABASE_URL=postgresql://heimdall_user:heimdall_pass@localhost:5432/heimdall_test

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
TEST_REDIS_URL=redis://localhost:6379/1

# Local AWS Mock Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
KMS_ENDPOINT_URL=http://localhost:4566
SECRETS_MANAGER_ENDPOINT_URL=http://localhost:4566
LOCALSTACK_ENDPOINT=http://localhost:4566

# Starknet Configuration
STARKNET_NETWORK=testnet
STARKNET_RPC_URL=https://starknet-sepolia.g.alchemy.com/starknet/version/rpc/v0_7/

# Security Configuration
MASTER_SEED_KMS_KEY_ID=test-key-id
SESSION_SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-32-chars-long

# Local Testing Configuration
ENABLE_AWS_MOCKS=true
MOCK_ENCLAVE=true
SKIP_ENCLAVE_ATTESTATION=true

# Performance and Monitoring
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
ENABLE_METRICS=true
METRICS_PORT=8080

# Development Tools
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false